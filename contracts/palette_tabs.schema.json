{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chrissyscrochet.local/contracts/palette_tabs.schema.json",
  "title": "Palette Tab Preferences Contract",
  "description": "SharedPreferences contract for palette tab labels.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "sharedPreferencesName",
    "keyPrefix",
    "slotCount",
    "maxLength",
    "defaults",
    "keys"
  ],
  "properties": {
    "sharedPreferencesName": {
      "type": "string",
      "const": "palette_tab_names"
    },
    "keyPrefix": {
      "type": "string",
      "const": "palette_tab_name_"
    },
    "slotCount": {
      "type": "integer",
      "const": 4
    },
    "maxLength": {
      "type": "integer",
      "const": 14
    },
    "defaults": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "prefixItems": [
        { "const": "Pastel" },
        { "const": "Metallic" },
        { "const": "Bright" },
        { "const": "Custom" }
      ]
    },
    "keys": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "palette_tab_name_0",
        "palette_tab_name_1",
        "palette_tab_name_2",
        "palette_tab_name_3"
      ],
      "properties": {
        "palette_tab_name_0": { "$ref": "#/$defs/tabName" },
        "palette_tab_name_1": { "$ref": "#/$defs/tabName" },
        "palette_tab_name_2": { "$ref": "#/$defs/tabName" },
        "palette_tab_name_3": { "$ref": "#/$defs/tabName" }
      }
    }
  },
  "$defs": {
    "tabName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 14,
      "description": "Semantics: app trims input; blank-after-trim falls back to default name for that slot."
    }
  }
}
